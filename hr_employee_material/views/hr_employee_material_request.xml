<odoo>

    <record model="ir.ui.view" id="hr_employee_material_request_form_view">
        <field name="name">hr.employee.material.request.form (in hr_employee_material)</field>
        <field name="model">hr.employee.material.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                     type="object"
                     string="Accept"
                     name="accept_request"
                     class="oe_highlight"
                     states="draft"/>
                    <button
                     type="object"
                     string="Cancel"
                     name="cancel_request"
                     states="draft,accepted"/>
                     <field name="state"  widget="statusbar"/>
                </header>
                <sheet>
                    <group name="employee">
                        <field name="name" invisible="1"/>
                        <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                    </group>
                    <notebook>
                        <page string="Material">
                            <field name="line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}" >
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="product_uom"/>
                                    <field name="state" readonly="1"/>
                                    <field name="material_request_id" invisible="1" />
                                    <field name="employee_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

   <record model="ir.ui.view" id="hr_employee_material_request_search_view">
        <field name="name">hr.employee.material.request.search (in hr_employee_material)</field>
        <field name="model">hr.employee.material.request</field>
        <field name="arch" type="xml">
            <search>
                <filter string="In Draft" name="draft_state" domain="[('state', '=', 'draft')]"/>
                <filter string="Accepted" name="accepted_state" domain="[('state', '=', 'accepted')]"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_employee_material_request_tree_view">
        <field name="name">hr.employee.material.request.tree (in hr_employee_material)</field>
        <field name="model">hr.employee.material.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" invisible="1"/>
                <field name="employee_id"/>
                <field name="create_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_employee_material_request_act_window">
        <field name="name">Employee Material Request</field>
        <field name="res_model">hr.employee.material.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_draft_state':1}</field>
    </record>

    <record model="ir.ui.menu" id="hr_employee_material_request_menu">
        <field name="name">Employee Material Request</field>
        <field name="parent_id" ref="hr_employee_material_menu"/>
        <field name="action" ref="hr_employee_material_request_act_window"/>
        <field name="sequence" eval="1"/>
    </record>

</odoo>
