<odoo>

    <record model="ir.ui.view" id="hr_employee_material_form_view">
        <field name="name">hr.employee.material.form (in hr_employee_material)</field>
        <field name="model">hr.employee.material</field>
        <field name="arch" type="xml">
            <form string="Employee Material" create="0">
                <header>
                    <button
                     type="object"
                     string="Validate"
                     name="validate_allocation"
                     class="oe_highlight"
                     states="accepted"/>
                    <button
                     type="object"
                     string="Expire"
                     name="expire_allocation"
                     states="valid"
                     />
                    <field name="state"  widget="statusbar" statusbar_visible="draft,accepted,valid,expired"/>
                </header>
                <sheet>
                    <field name="name" invisible="1"/>
                    <group name="main">
                        <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="product_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="quantity" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="product_uom_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group>
                        <field name="material_request_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group name="date">
                        <field name="start_date" attrs="{'readonly': [('state', 'not in', ('draft','accepted'))]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_employee_material_tree_view">
        <field name="name">hr.employee.material.tree (in hr_employee_material)</field>
        <field name="model">hr.employee.material</field>
        <field name="arch" type="xml">
            <tree string="Employee Materials" create="0">
                <field name="name" invisible="1"/>
                <field name="product_id"/>
                <field name="employee_id"/>
                <field name="quantity"/>
                <field name="product_uom_id"/>
                <field name="start_date"/>
                <field name="state"/>
                <field name="material_request_id" invisible="1" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_employee_material_search_view">
        <field name="name">hr.employee.material.search (in hr_employee_material)</field>
        <field name="model">hr.employee.material</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="state"/>
                <field name="employee_id"/>
                <field name="product_id"/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="state" string="State" context="{'group_by' : 'state'}" />
                    <filter name="product_id" string="Product" context="{'group_by' : 'product_id'}" />
                    <filter name="employee_id" string="Employee" context="{'group_by' : 'employee_id'}" />
                </group>
                <filter string="In Draft" name="draft_state" domain="[('state', '=', 'draft')]"/>
                <filter string="Accepted" name="accepted_state" domain="[('state', '=', 'accepted')]"/>
                 <filter string="Valid" name="valid_state" domain="[('state', '=', 'valid')]"/>
                <filter string="Expired" name="expired_state" domain="[('state', '=', 'expired')]"/>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="hr_employee_material_act_window">
        <field name="name">Allocations</field>
        <field name="res_model">hr.employee.material</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_accepted_state':1}</field>
    </record>

    <record model="ir.ui.menu" id="hr_employee_material_menu">
        <field name="name">Material</field>
        <field name="parent_id" ref="hr.menu_hr_root"/>
        <field name="sequence" eval="16"/>
    </record>

     <record model="ir.ui.menu" id="hr_employee_material_allocations_menu">
        <field name="name">Allocations</field>
        <field name="parent_id" ref="hr_employee_material_menu"/>
        <field name="action" ref="hr_employee_material_act_window"/>
        <field name="sequence" eval="16"/>
    </record>

</odoo>
