<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form (in hr_employee_material)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='purchase_ok']/.." position="after">
                 <div>
                     <field name="is_employee_material"/>
                     <label for="is_employee_material"/>
                 </div>
            </xpath>
            <xpath expr="//page[@name='inventory']" position="after">
                <page name="employee_material" string="Employee Material" attrs="{'invisible': [('is_employee_material', '=', False)]}">
                </page>
            </xpath>
        </field>
    </record>

</odoo>
