<odoo>
    <record model="ir.ui.view" id="hr_employee_material_form_view">
        <field name="name">hr.employee.material.form (in hr_employee_material_stock)</field>
        <field name="model">hr.employee.material</field>
        <field name="inherit_id" ref="hr_employee_material.hr_employee_material_form_view"/>
        <field name="arch" type="xml">
            <button name="validate_allocation" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('skip_procurement', '=', False), ('state', '!=', 'accepted')]}</attribute>
            </button>
            <field name="material_request_id" position='after'>
                 <field name="location_id"/>
                 <field name="procurement_group_id" invisible="1"/>
                 <field name="skip_procurement"/>
            </field>
            <xpath expr="//field[@name='quantity']" position="replace">
                <field name="qty_delivered"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_employee_material_tree_view">
        <field name="name">hr.employee.material.tree (in hr_employee_material_stock)</field>
        <field name="model">hr.employee.material</field>
        <field name="inherit_id" ref="hr_employee_material.hr_employee_material_tree_view"/>
        <field name="arch" type="xml">
            <field name="quantity" position="replace">
                <field name="qty_delivered"/>
            </field>
        </field>
    </record>
</odoo>
