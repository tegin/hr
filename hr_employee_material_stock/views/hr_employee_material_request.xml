<odoo>

    <record model="ir.ui.view" id="hr_employee_material_request_form_view">
        <field name="name">hr.employee.material.request.form (in hr_employee_material_stock)</field>
        <field name="model">hr.employee.material.request</field>
        <field name="inherit_id" ref="hr_employee_material.hr_employee_material_request_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='employee']" position="before">
                <div name="button_box" class="oe_button_box">
                        <button
                        type="object"
                        name="action_view_pickings"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('picking_count','&lt;','1')]}"
                    >
                        <field
                            name="picking_count"
                            widget="statinfo"
                            string="Pickings"
                        />
                    </button>
                </div>

            </xpath>
           <xpath expr="//field[@name='employee_id']" position="after">
                 <field name="location_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                 <field name="procurement_group_id" invisible="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
           </xpath>
            <xpath expr="//tree/field[@name='state']" position="before">
                 <field name="qty_delivered"/>
                 <field name="location_id" invisible="1"/>
                 <field name="procurement_group_id" invisible="1"/>
           </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_employee_material_request_tree_view">
        <field name="name">hr.employee.material.request.tree (in hr_employee_material_stock)</field>
        <field name="model">hr.employee.material.request</field>
        <field name="inherit_id" ref="hr_employee_material.hr_employee_material_request_tree_view"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='employee_id']" position="after">
                 <field name="location_id"/>
             </xpath>
        </field>
    </record>

</odoo>
